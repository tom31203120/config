[user]
    name = yushengjun
    email = apieceofredcloth@gmail.com
[alias]
    st = status
    s = status -sb
    df = diff --ignore-space-change
    ci = commit
    co = checkout
    rb = rebase
    br = branch
    ph = push
    pl = pull
    f = fetch
    r = remote
    rv = remote -v
    mg = merge
    dw = diff --word-diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[color]
    ui = auto
[core]
    editor = vim
    autocrlf = false
    safecrlf = true
